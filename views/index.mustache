<div id="uploadForm" class="row">
  <h2>Upload Files for Analysis</h1>
  <p>Upload csv files for employees and salaries to analyze them</p>

  <div id="error"></div>

  <form role="form">
    <div class="form-group">
      <label for="employeesFile">Employees</label>
      <input accept=".csv" type="file" id="employeesInputFile">
      <p class="help-block">Select a csv file containing employee_id / birthdate / firstname / lastname / sex / start_date</p>
    </div>
    <div class="form-group">
      <label for="salariesFile">Salaries</label>
      <input accept=".csv" type="file" id="salariesInputFile">
      <p class="help-block">Select a csv file containing employee_id / salary / start_of_salary / end_of_salary</p>
    </div>
    <button id="upload" type="submit" class="btn btn-default">Upload</button>
  </form>
</div>

<div id="uploadProgress" class="row">
  <h2>Uploading...</h2>

  <div class="progress">
    <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
      <span></span>
    </div>
  </div>
</div>

<div class="row" id="results">
  <p></p>
  <button id="startOver" type="button" class="btn btn-info">Upload New Data</button>
</div>